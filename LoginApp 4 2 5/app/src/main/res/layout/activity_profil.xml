<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/kosu2"
    tools:context=".ProfilActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geleceğe Adım"
        android:layout_gravity="center"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:textSize="50sp"
        android:textColor="@color/black"
        android:textStyle="bold"


        />

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/stepCountTargetTextView"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Gerekli Adım : 5000"
        tools:ignore="DuplicateIds" />

    <ProgressBar android:id="@+id/progressBar"
        android:layout_width="130dp"
        android:layout_height="187dp"
        style="?android:progressBarStyleHorizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/cricualer"
        android:padding="10dp"
        android:progressDrawable="@drawable/custom_progress"/>


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView android:layout_width="79dp"
            android:layout_height="96dp"
            android:src="@drawable/foot"/>

        <TextView
            android:id="@+id/stepCountTextView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:text="Steps: 0"
            android:padding="20dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_gravity="center"/>
    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView android:layout_width="79dp"
            android:layout_height="96dp"
            android:src="@drawable/distance"/>

        <TextView android:id="@+id/distanceTextView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:text="Mesafe: 0"
            android:padding="20dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    </LinearLayout>

    <Button
        android:id="@+id/pauseButton"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/custom_button_2"
        android:onClick="onPauseButtonClicked"
        android:padding="20dp"
        android:text="Durdur"


        android:textColor="@color/white"

        />


</LinearLayout>
